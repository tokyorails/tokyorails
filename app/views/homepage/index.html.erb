<div class="logo">
  <%= image_tag "tokyo-rails-400x193.png", :alt => 'TOKYO Rails Meetup' %>
</div>
<div class="hero-unit">

  <%= render 'next_event', :event => Event.upcoming.recent.last if Event.upcoming.present? %>

  <p><%= t '.intro1' %></p>

  <div id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
        <% Image.event_photos.each_with_index do |image, index| %>
            <div class = "item<%= index == 0 ? ' active' : '' %>">
                <img src="<%= image.thumb("820x400#").url %>" alt="">
                <div class="carousel-caption">
                  <h4><%= image.imageable.name %></h4>
                </div>
            </div>
        <% end %>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
  </div>

  <p><%= t '.intro3' %></p>

</div>

<div class="row">

  <div class="span4">
    <h2><%= link_to t('.members.title'), members_path %></h2>
    <p><%= t '.members.brief' %>
    <p><%= link_to t('.more.html'), members_path, :class => "btn btn-info" %></p>
  </div>

  <div class="span4">
    <h2><%= link_to t('.events.title'), events_path %></h2>
    <p><%= t '.events.brief' %></p>
    <p><%= link_to t('.more.html'), events_path, :class => "btn btn-info" %></p>
  </div>

  <div class="span4">
    <h2><%= link_to t('.projects.title'), projects_path %></h2>
    <p><%= t '.projects.brief' %></p>
    <p><%= link_to t('.more.html'), projects_path, :class => "btn btn-info" %></p>
  </div>

</div>
